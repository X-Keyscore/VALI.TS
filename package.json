{
	"name": "valie",
	"version": "1.0.1",
	"description": "A runtime data validator in TypeScript with advanced type inference, built-in validation functions, and seamless integration for server and client environments.",
	"homepage": "https://github.com/x-keyscore/valie#readme",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/types/index.d.ts",
	"exports": {
		".": {
    		"import": "./dist/index.js",
    		"require": "./dist/index.js",
    		"types": "./dist/types/index.d.ts"
  		},
		"./devkit": {
			"import": "./dist/devkit.js",
			"require": "./dist/devkit.js",
			"types": "./dist/types/devkit.d.ts"
		}
	},
	"scripts": {
		"start": "tsc && node dist",
		"clean": "rm -rf ./dist",
		"build": "npm run clean && tsc",
		"build:pack": "npm run build && npm pack && mv -f ./*.tgz pack/",
		"test": "npm run build && node --test"
	},
	"keywords": [
		"valie",
		"validator",
		"validation",
		"data-validation",
		"runtime-validation",
		"type-safety",
		"type-checking",
		"type-validation",
		"typescript",
		"typescript-validator",
		"type-guard",
		"schema",
		"schema-validation",
		"validation-library"
	],
	"author": "x-keyscore",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^22.10.5",
		"typescript": "^5.7.3"
	}
}
