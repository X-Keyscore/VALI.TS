{
	"compilerOptions": {
		"noErrorTruncation": true,

		"target": "ES2023",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"declaration": true,
		"skipLibCheck": true,
		"outDir": "./dist"
	},
	"include": ["src"],
    "exclude": ["**/node_modules", "**/.*/"],
}