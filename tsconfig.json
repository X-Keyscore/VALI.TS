{
	"compilerOptions": {
		"strict": true,
		"outDir": "./dist",
		"paths": {
			"vali/devkit": ["./src/devkit"]
		},
		"target": "ES2018",
		"lib": ["ES2018", "ES2021.WeakRef"],
		"module": "NodeNext",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noErrorTruncation": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true
	},
	"include": ["src"],
    "exclude": ["**/node_modules", "**/.*/"]
}