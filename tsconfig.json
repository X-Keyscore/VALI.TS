{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES2015",
		"strict": true,
		"module": "NodeNext",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noErrorTruncation": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		//"declarationMap": true,
	},
	"include": ["src"],
    "exclude": ["**/node_modules", "**/.*/"]
}